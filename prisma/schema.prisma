generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ride {
  id             String    @id @default(uuid())
  meetingPoint   String
  destination    String
  departureTime  DateTime
  capacity Int
  message        String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  userId         String    // Will link to User model when auth is added
  bookings       Booking[]
}

model Booking {
  id        String   @id @default(uuid())
  ride      Ride     @relation(fields: [rideId], references: [id], onDelete: Cascade)
  rideId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}